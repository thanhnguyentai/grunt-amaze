---
title: "Form Application Speculative"
---


<form class="frm" method="post" enctype="multipart/form-data" action="/forms" data-require="controllers/formController" data-form="Speculative Careers Form" novalidate>
	<div class="site__max-element-width">
		<div class="grid">
			<div class="grid__item one-whole medium--six-eighths push--medium--one-eighth large--eight-twelfths push--large--two-twelfths">
				<fieldset id="step1" class="frm__step">
					<legend class="frm__step-title">About you</legend>

					<div class="frm__item" data-form-item>
						<label class="frm__label" for="FirstName">first name</label>
						<input class="frm__input" type="text" name="FirstName" id="FirstName" data-rule-required="true" placeholder="first name" />
					</div>

					<div class="frm__item" data-form-item>
						<label class="frm__label" for="LastName">last name</label>
						<input class="frm__input" type="text" name="LastName" id="LastName" data-rule-required="true" placeholder="last name" />
					</div>

					<div class="frm__item" data-form-item>
						<label class="frm__label" for="Email">email</label>
						<input class="frm__input" type="email" name="Email" id="Email" data-rule-required="true" data-rule-email="true" placeholder="email" />
					</div>

					<div class="frm__item" data-form-item>
						<label class="frm__label" for="PhoneNumber">phone number</label>
						<input class="frm__input" type="tel" name="PhoneNumber" id="PhoneNumber" data-rule-phone="true" data-rule-required="true" placeholder="phone number" />
					</div>

					<div class="frm__item" data-form-item>
						<label class="frm__label" for="CanWorkInUK">eligible to work in the UK</label>
						<div class="frm__field-group">
							<label class="frm-checkbox">
								<input name="CanWorkInUK" type="radio" value="True" class="frm-checkbox__input vh" data-rule-required="true" data-rule-pattern="True" data-msg-pattern="We currently can't accept non - UK residents." />
								<span class="frm-checkbox__radio-tick">
									<span class="frm-checkbox__radio-tick-checked"></span>
								</span>
								yes
							</label>
							<label class="frm-checkbox">
								<input name="CanWorkInUK" type="radio" value="False" class="frm-checkbox__input vh" data-rule-required="true" data-rule-pattern="True" data-msg-pattern="We currently can't accept non - UK residents." />
								<span class="frm-checkbox__radio-tick">
									<span class="frm-checkbox__radio-tick-checked"></span>
								</span>
								no
							</label>
						</div>
					</div>
				</fieldset>

				<fieldset id="step2" class="frm__step">
					<legend class="frm__step-title">Your CV</legend>

					<div class="frm__item" data-form-item>
						<label class="frm__label" for="DesiredPosition">desired position</label>
						<input class="frm__input" type="text" name="DesiredPosition" id="DesiredPosition" data-rule-required="true" placeholder="desired position" />
					</div>

					<div class="frm__item" data-form-item>
						<label class="frm__label" for="Desired Location">desired location</label>
						<div data-require="views/selectView" class="frm-select-wrap">
							<select id="Desired Location" name="Desired Location" class="frm-select" data-analytics="form-data" >
								<option value="Manchester (HQ)">Manchester (HQ)</option>
								<option value="Liverpool">Liverpool</option>
								<option value="London">London</option>
								<option value="Chicago">Chicago</option>
								<option value="Shanghai">Shanghai</option>
							</select>
							<span class="frm-select-wrap__icon icon icon--arrow-down"></span>
						</div>
					</div>

					<div class="frm__item" data-form-item>
						<label class="frm__label" for="Job Type">job type</label>
						<div class="frm__field-group">
							<label class="frm-checkbox">
								<input name="Job Type" type="radio" value="Full Time" class="frm-checkbox__input vh" data-rule-required="true" data-analytics="form-data" />
								<span class="frm-checkbox__radio-tick">
									<span class="frm-checkbox__radio-tick-checked"></span>
								</span>
								full time
							</label>
							<label class="frm-checkbox">
								<input name="Job Type" type="radio" value="Part Time" class="frm-checkbox__input vh" data-rule-required="true" data-analytics="form-data" />
								<span class="frm-checkbox__radio-tick">
									<span class="frm-checkbox__radio-tick-checked"></span>
								</span>
								part time
							</label>
						</div>
					</div>

					<div class="frm__item" data-form-item>
						<label class="frm__label" for="Contract Type">contract type</label>
						<div class="frm__field-group">
							<label class="frm-checkbox">
								<input name="Contract Type" type="radio" value="Temp" class="frm-checkbox__input vh" data-rule-required="true" data-analytics="form-data" />
								<span class="frm-checkbox__radio-tick">
									<span class="frm-checkbox__radio-tick-checked"></span>
								</span>
								temp
							</label>
							<label class="frm-checkbox">
								<input name="Contract Type" type="radio" value="Perm" class="frm-checkbox__input vh" data-rule-required="true" data-analytics="form-data" />
								<span class="frm-checkbox__radio-tick">
									<span class="frm-checkbox__radio-tick-checked"></span>
								</span>
								perm
							</label>
						</div>
					</div>

					<div class="frm__item" data-form-item>
						<label class="frm__label" for="Reason">why are you interested in joining the team?</label>
						<textarea class="frm__input " type="text" name="Reason" id="Reason" data-rule-required="true" placeholder="why are you interested in joining the team ?"></textarea>
					</div>

					<div class="frm__item" data-form-item>
						<label class="frm__label" for="CVFile">upload CV</label>
						<div class="frm-file-wrap" data-require="views/fileView">
							<input id="CVFile" type="file" name="CVFile" class="frm-file" extension="pdf,doc,docx" data-rule-required="true" />
						</div>
						<small class="frm__small">Word / PDF / Max size 10mb</small>
					</div>

					<div class="frm__item" data-form-item>
						<label class="frm__label" for="LinkedInUrl">my LinkedIn profile</label>
						<input class="frm__input" type="url" name="LinkedInUrl" id="LinkedInUrl" placeholder="my LinkedIn profile" />
					</div>

					<div class="frm__item" data-form-item>
						<label class="frm__label" for="PortfolioURL">link to my portfolio</label>
						<input class="frm__input" type="url" name="PortfolioURL" id="PortfolioURL" placeholder="link to my portfolio" />
					</div>
				</fieldset>

				<fieldset id="step3" class="frm__step">
					<legend class="frm__step-title">Final points</legend>

					<div class="frm__item" data-form-item>
						<label class="frm__label" for="CurrentSalary">current salary</label>
						<input class="frm__input" type="text" name="CurrentSalary" id="CurrentSalary" data-rule-required="true" placeholder="current salary" />
					</div>

					<div class="frm__item" data-form-item>
						<label class="frm__label" for="ExpectedSalary">salary expectations</label>
						<input class="frm__input" type="text" name="ExpectedSalary" id="ExpectedSalary" data-rule-required="true" placeholder="salary expectations" />
					</div>

					<div class="frm__item" data-form-item>
						<label class="frm__label" for="NoticePeriod">notice period</label>
						<input class="frm__input" type="text" name="NoticePeriod" id="NoticePeriod" data-rule-required="true" placeholder="notice period" />
					</div>

					<div class="frm__item" data-form-item>
						<label class="frm__label" for="Source">how did you hear about the vacancy?</label>
						<input class="frm__input" type="text" name="Source" id="Source" placeholder="how did you hear about the vacancy?" />
					</div>

					<button type="submit" class="btn btn--square btn--square-icon btn--icon"><span class="icon icon--arrow-right"></span>Submit application</button>
				</fieldset>
			</div>
		</div>
	</div>
</form>
