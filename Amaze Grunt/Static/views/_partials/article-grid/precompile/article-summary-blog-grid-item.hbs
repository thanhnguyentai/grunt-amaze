
<article class="article-summary{{#is display "half"}} article-grid__flex-half{{/is}}{{#is display "full"}} article-grid__flex-whole{{/is}}"
	data-id="{{id}}"
	data-categories="{{#each categories}}{{this}}{{#unless @last}},{{/unless}}{{/each}}"
	data-month="{{month}}"
	data-year="{{year}}"
	data-display="{{display}}"
	data-type="{{type}}"
	data-grid-item>

	<div class="article-summary__image article-summary__image--triangle vsb--small-connected">
		<a href="{{url}}">
			<!-- NOTE: Use ImageResizing.NET ?width=XXX -->
			<!-- Small ~480 -->
			<!-- Medium ~640 -->
			<!-- Large ~1024 -->
			<picture>
				<source media="(min-width: 64rem)" srcset="{{images.large}}" />
				<source media="(min-width: 40rem)" srcset="{{images.medium}}" />
				<source media="(min-width: 30rem)" srcset="{{images.small}}" />
				<img src="{{images.default}}" alt="" />
			</picture>
		</a>
	</div>

	<div class="article-summary__content article-summary__content--indented{{#is display "full"}} article-summary__content--grid-full-indented{{/is}}">

		<h1 class="article-summary__heading text--xlarge"><a href="{{url}}">{{title}}</a></h1>

		<div class="article-summary__summary editorial">
			<p>{{summary}}</p>
		</div>

		<div class="article-summary__onward">
			<p class="article-summary__onward-cta"><a href="{{url}}">{{ctaText}} <span class="vh">{{title}}</span></a></p>

			{{#and showComments showViews}}
			<p class="article-summary__onward-icons activity-icons">
				{{#if showComments}}
				<span class="activity-icons__comments"><span class="vh">Comments</span><a href="#"><span class="icon icon--comments"></span><span data-disqus-url="{{comments}}" data-disqus-identifier="{{contentGuid}}" class="disqus-comment-count">0</span></a></span>
				{{/if}}
				{{#if showViews}}
				<span class="activity-icons__views"><span class="vh">Views</span><span class="icon icon--views"></span> {{views}}</span>
				{{/if}}
			</p>
			{{/and}}

		</div>

	</div>

</article>
